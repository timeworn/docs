{
    "$schema": "https://turborepo.dev/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".source/**",
                ".next/**",
                "!.next/cache/**",
                "dist/**",
                "out",
                "build",
                ".vercel"
            ]
        },
        "types:check": {
            "dependsOn": [
                "^types:check"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}